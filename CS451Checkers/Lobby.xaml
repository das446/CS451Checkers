<Window x:Class="CS451Checkers.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS451Checkers"
        mc:Ignorable="d"
        Title="Lobby" Height="450" Width="800">
    <Grid>
        <Button x:Name="Host" Content="Host"  HorizontalAlignment="Left" Margin="133,294,0,0" VerticalAlignment="Top" Width="94" Click="Host_Click" Height="28"/>
        <Button x:Name="Connect" Content="Connect"  HorizontalAlignment="Left" Margin="133,143,0,0" VerticalAlignment="Top" Width="94" Click="Connect_Click" Height="28"/>
        <Label x:Name="IP" Content="IP" HorizontalAlignment="Left" Margin="526,143,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ConnectIP" HorizontalAlignment="Left" Height="23" Margin="526,283,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Connect to IP" HorizontalAlignment="Left" Margin="439,280,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.344,-0.914"/>
        <Label x:Name="Status" Content="Status:" HorizontalAlignment="Left" Margin="373,65,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
